

<section id="section-{{ section.id }}" data-section-id="{{ section.id }}" class=" {% if section.settings.add_padding_top %} section_padding_top_wrap {% endif %} {% if section.settings.add_padding_bottom %} section_padding_bottom_wrap {% endif %}">
    {% assign trimmed_title = section.settings.title | strip %}
    {% assign trimmed_sub_title = section.settings.sub_title | strip %}
    {% if trimmed_title and trimmed_title != '' %}
      <div class="image_four_title">
        {{  trimmed_title }}
      </div>
    {% endif %}

   {% if trimmed_sub_title and trimmed_sub_title != '' %}
      <div class="image_four_sub_title">
        {{  trimmed_sub_title }} 
      </div>
    {% endif %}

  <div class="image_three_wrap">

    {% if section.settings.content_position == "left" %}

      <div class="image_three_item_left image_three_item_large  {% if section.settings.product_title_1 != blank %} image_three_item_large_has_title{% endif %}">
        {%  if section.settings.image_1 and section.settings.button_link_1 %}
          <div class="image_three_item ">
            <a href="{{ section.settings.button_link_1 }}">
              <img loading="lazy" src="{{ section.settings.image_1 | img_url:"master" }}">      
            </a>
    
            {% if section.settings.product_title_1 != blank %}
             <a href="{{ section.settings.button_link_1 }}">
              <div class="image_four_product_name"> {{ section.settings.product_title_1 }}</div>   
             </a>
            {% endif %}
          </div>
        
        {% endif %}
      </div>
      <div class="image_three_item_right">
        {%  if section.settings.image_2 and section.settings.button_link_2 %}
          <div class="image_three_item">
            <a href="{{ section.settings.button_link_2 }}">
              <img loading="lazy" src="{{ section.settings.image_2 | img_url:"master" }}">
            </a>
            
             {% if section.settings.product_title_2 != blank %}
               <a href="{{ section.settings.button_link_2 }}">
                <div class="image_four_product_name"> {{ section.settings.product_title_2 }}</div>   
               </a>
              {% endif %}
          </div>
        
        {% endif %}
    
        {%  if section.settings.image_3 and section.settings.button_link_3 %}
          <div class="image_three_item">
            <a href="{{ section.settings.button_link_3 }}">
              <img loading="lazy" src="{{ section.settings.image_3 | img_url:"master" }}">
            </a>
    
            {% if section.settings.product_title_3 != blank %}
               <a href="{{ section.settings.button_link_3 }}">
                <div class="image_four_product_name"> {{ section.settings.product_title_3 }}</div>   
               </a>
            {% endif %}
          </div>
        
        {% endif %}
      </div>
      

    {% else %}
      
      <div class="image_three_item_left">
          {%  if section.settings.image_2 and section.settings.button_link_2 %}
            <div class="image_three_item">
              <a href="{{ section.settings.button_link_2 }}">
                <img src="{{ section.settings.image_2 | img_url:"master" }}">
              </a>
              
               {% if section.settings.product_title_2 != blank %}
                 <a href="{{ section.settings.button_link_2 }}">
                  <div class="image_four_product_name"> {{ section.settings.product_title_2 }}</div>   
                 </a>
                {% endif %}
            </div>
          
          {% endif %}
      
          {%  if section.settings.image_3 and section.settings.button_link_3 %}
            <div class="image_three_item">
              <a href="{{ section.settings.button_link_3 }}">
                <img src="{{ section.settings.image_3 | img_url:"master" }}">
              </a>
      
              {% if section.settings.product_title_3 != blank %}
                 <a href="{{ section.settings.button_link_3 }}">
                  <div class="image_four_product_name"> {{ section.settings.product_title_3 }}</div>   
                 </a>
              {% endif %}
            </div>
          
          {% endif %}
       </div>

      <div class="image_three_item_right image_three_item_large {% if section.settings.product_title_1 != blank %} image_three_item_large_has_title{% endif %}">
         {%  if section.settings.image_1 and section.settings.button_link_1 %}
            <div class="image_three_item ">
              <a href="{{ section.settings.button_link_1 }}">
                <img src="{{ section.settings.image_1 | img_url:"master" }}">      
              </a>
      
              {% if section.settings.product_title_1 != blank %}
               <a href="{{ section.settings.button_link_1 }}">
                <div class="image_four_product_name"> {{ section.settings.product_title_1 }}</div>   
               </a>
              {% endif %}
            </div>
          
          {% endif %}
  
      </div>

    {% endif %}
    
    

   
  </div>
    
 
</section>

<style>

 

  
  #section-{{ section.id }} .image_three_wrap {
        display: flex;
        align-items: stretch;
        justify-content: center;
        gap: 6px;
        padding: 6px 0px;
  }

  #section-{{ section.id }} .image_four_title {
    font-family: Metanoia; 
    font-size: 50px; 
    font-weight: 400; 
    color: #8b8b8b;
    text-align: center;
  }


  #section-{{ section.id }} .image_four_sub_title {
        max-width: 800px;
        text-align: center;
        margin: auto;
        padding: 0 20px;
        padding-bottom: 25px;
        padding-top: 10px;
   }

  #section-{{ section.id }} .image_three_item {
    width: 50%;
  }

  #section-{{ section.id }} .image_three_item_large .image_three_item {
    width: 100%;
  }

  #section-{{ section.id }} .image_three_item_right, #section-{{ section.id }} .image_three_item_left {
    width: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 6px;
  }

   #section-{{ section.id }} .image_three_item_large {
        width: 50%;
        display: flex;
        align-items: stretch;
  }

  #section-{{ section.id }}  .image_three_item_large img {
    height: 100%;
    object-fit: cover;
  }

  #section-{{ section.id }} .image_three_item_large_has_title img {
    height: calc(100% - 32px);
    object-fit: cover;
  }

  .image_four_product_name {
    font-weight: var(--heading-font-weight);
    font-style: var(--heading-font-style);
    color: var(--heading-color);
    transition: color 0.2s ease-in-out;
    margin-bottom: 4px;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    text-align: center;
    white-space: normal;
    font-size: 11px;
    margin-top: 10px;
    margin-bottom: 5px;
  }

  @media screen and (max-width: 768px) {

     #section-{{ section.id }} .image_three_wrap { 
      flex-wrap: wrap;
    }
  
    #section-{{ section.id }} .image_four_item {
      width: 48%;
    }  

    #section-{{ section.id }} .image_four_title {
    font-family: Metanoia; 
    font-size: 22px; 
    font-weight: 400; 
    color: #8b8b8b;
  }

    .image_four_product_name {
      font-size: 10px;
    }

    #section-{{ section.id }} .image_three_item_right, #section-{{ section.id }} .image_three_item_left {
      width: 100%;
    }

   #section-{{ section.id }} .image_three_item_large {
    width: 100%;
    }

   #section-{{ section.id }}  .image_three_item_large img {
      height: auto;
      object-fit: cover;
  width: 100%;
    }
  
    #section-{{ section.id }} .image_three_item_large_has_title img {
      height: auto;
      object-fit: cover;
      width: 100%;
    }
  }

  
</style>

